#--- source.hlsl
struct Doggo {
  int3 Legs;
  int TailState;
  int2 Ears;
};

RWStructuredBuffer<Doggo> Buf;

[numthreads(2,1,1)]
void main(uint GI : SV_GroupIndex) {
  Doggo Fido = Buf[GI];
  if (Fido.TailState == 0) {
    Fido.TailState = Fido.Legs.x + Fido.Legs.y + Fido.Legs.z;
  }
  Buf[GI] = Fido;
}
