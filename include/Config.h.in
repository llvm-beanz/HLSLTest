#ifndef OFFLOADTEST_CONFIG_H
#define OFFLOADTEST_CONFIG_H

/* Enable D3D12 Support */
#cmakedefine OFFLOADTEST_ENABLE_D3D12

/* Enable Vulkan Support */
#cmakedefine OFFLOADTEST_ENABLE_VULKAN

/* Enable Metal Support */
#cmakedefine OFFLOADTEST_ENABLE_METAL

/* If building for apple platforms */
#cmakedefine01 APPLE

#endif // OFFLOADTEST_CONFIG_H
